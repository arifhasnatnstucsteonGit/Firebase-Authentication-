<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="integrate.social.arifhasnat.myapplication.SignInActiivty">
    <EditText
        android:textColorHint="@color/white"
        android:gravity="center"
        android:textColor="@color/white"
        android:hint="Email"
        android:background="#0B0B0B"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmailModify"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editPassword" />
    <EditText
        android:visibility="invisible"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:textColor="@color/white"
        android:hint="Password"
        android:background="#0B0B0B"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:layout_below="@+id/editTextEmailModify"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_alignParentStart="true" />


    <Button
        android:visibility="invisible"
        android:background="@color/almostBlack"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/buttonRegiste"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:id="@+id/buttonResetPassword"
        android:layout_below="@+id/buttonRegiste"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/buttonChangePassword"
        android:layout_alignTop="@+id/buttonResetPassword"
        android:layout_alignEnd="@+id/editPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change  Email"
        android:id="@+id/buttonChangeEmail"
        android:layout_below="@+id/buttonResetPassword"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonResetPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deleteuser"
        android:id="@+id/buttonDeleteUser"
        android:layout_below="@+id/buttonChangePassword"
        android:layout_alignStart="@+id/buttonChangePassword"
        android:layout_alignEnd="@+id/buttonChangePassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/buttonLogOut"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/buttonDeleteUser"
        android:layout_alignParentStart="true" />
</RelativeLayout>
